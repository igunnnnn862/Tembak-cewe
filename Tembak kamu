<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Aku Mau Bilang Sesuatu...</title>
  <style>
    body {
      font-family: 'Comic Sans MS', cursive;
      background: linear-gradient(to top right, #ffdde1, #ee9ca7);
      color: #fff;
      text-align: center;
      padding: 50px;
    }
    h1 {
      font-size: 2.5em;
    }
    #typewriter {
      font-size: 1.8em;
      white-space: pre-line;
      margin-bottom: 30px;
    }
    .btn {
      padding: 15px 30px;
      margin: 10px;
      font-size: 1.2em;
      border: none;
      border-radius: 15px;
      cursor: pointer;
    }
    .yes {
      background-color: #ff4d6d;
      color: white;
    }
    .no {
      background-color: #444;
      color: white;
    }
    .hidden {
      display: none;
    }
  </style>
</head>
<body>

  <h1>Aku Mau Bilang Sesuatu...</h1>
  <div id="typewriter"></div>

  <div id="question" class="hidden">
    <p>Mau nggak...<br><strong>Jadi Pacarku? 🥹❤️</strong></p>
    <button class="btn yes" onclick="jawaban(true)">Iya Mau!</button>
    <button class="btn no" onclick="jawaban(false)">Enggak 😅</button>
  </div>

  <div id="result" class="hidden"></div>

  <script>
    const teks = "Aku udah lama mikirin ini...\nDan akhirnya aku berani bilang...\n";
    let i = 0;
    const speed = 50;

    function typeWriter() {
      if (i < teks.length) {
        document.getElementById("typewriter").innerHTML += teks.charAt(i);
        i++;
        setTimeout(typeWriter, speed);
      } else {
        document.getElementById("question").classList.remove("hidden");
      }
    }

    function jawaban(ya) {
      document.getElementById("question").classList.add("hidden");
      const result = document.getElementById("result");
      result.classList.remove("hidden");
      if (ya) {
        result.innerHTML = "<h2>YEEEAY! ❤️ Aku Sayang Kamu 😘</h2>";
      } else {
        result.innerHTML = "<h2>🥲 Yahh... Tapi aku tetap sayang kamu kok.</h2>";
      }
    }

    // Mulai typewriter
    typeWriter();
  </script>

</body>
</html>
